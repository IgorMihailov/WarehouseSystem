<Window x:Class="Warehouse.ImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Warehouse"
        mc:Ignorable="d"
        Title="ImportWindow" MinHeight="350" MinWidth="270"
        MaxWidth="270" MaxHeight="350">
    <StackPanel HorizontalAlignment="Left" Height="300" Margin="48,33,0,0" VerticalAlignment="Top" Width="177">
        <Label Content="Товар"/>
        <ComboBox Name="BalanceProducts"></ComboBox>
        <Label Name="Partner" Content="Поставщик"/>
        <ComboBox Name="PartnersBox"></ComboBox>
        <Label Content="Кол-во"/>
        <TextBox Name="AmountBox" TextWrapping="Wrap" Margin="0,0,-0.6,30" PreviewTextInput="AmountBox_PreviewTextInput"/>
        <Button Content="Принять" Name="Apply" Click="Apply_Click"/>
        <TextBlock Name="Warning" HorizontalAlignment="Center" Margin="0,20,0,0" Foreground="Red">Заполните все поля!</TextBlock>
    </StackPanel>
</Window>
